@{
    ViewData["Title"] = "Create Message";
}
@model Message
<form action="" method="post">
    Message: <input asp-for="msg" /><br />
    Page: <input asp-for="pgnum" /><br />
    <input type="submit" value="submit" />
</form>
@if(ViewBag.Message!=null)
{
    <p>Message: @ViewBag.Message.msg</p>
    <p>Page number: @ViewBag.Message.pgnum</p>
}