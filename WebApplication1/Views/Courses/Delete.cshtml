@model Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <h1>Delete Course</h1>
    <p>Are you sure you want to delete this course?</p>

    <dl class="row">
        <dt class="col-sm-2">Course ID</dt>
        <dd class="col-sm-10">@Model.CourseID</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CourseID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
